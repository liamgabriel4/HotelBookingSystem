@model IEnumerable<HotelBookingSystem.Models.Room>

<h2>Available Rooms</h2>
<a asp-action="Create">➕ Add New Room</a>

<table border="1" cellpadding="5">
    <tr>
        <th>Name</th>
        <th>Capacity</th>
        <th>Price Per Night</th>
        <th>Status</th>
    </tr>
    @foreach (var room in Model)
    {
        <tr>
            <td>@room.Name</td>
            <td>@room.Capacity</td>
            <td>@room.PricePerNight.ToString("C")</td>
            <td>@(room.IsAvailable ? "Available" : "Booked")</td>
        </tr>
    }
</table>
