@model IEnumerable<HotelBookingSystem.Models.Booking>

<h2>Bookings</h2>
<a asp-action="Create">➕ Make a New Booking</a>

<table border="1" cellpadding="5">
    <tr>
        <th>Booking ID</th>
        <th>Customer</th>
        <th>Email</th>
        <th>Room ID</th>
        <th>Check-In</th>
        <th>Check-Out</th>
        <th>Total Price</th>
    </tr>
    @foreach (var booking in Model)
    {
        <tr>
            <td>@booking.Id</td>
            <td>@booking.CustomerName</td>
            <td>@booking.CustomerEmail</td>
            <td>@booking.RoomId</td>
            <td>@booking.CheckInDate.ToShortDateString()</td>
            <td>@booking.CheckOutDate.ToShortDateString()</td>
            <td>@booking.TotalPrice.ToString("C")</td>
        </tr>
    }
</table>
